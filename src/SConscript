Import('extra_ccflags')

afk_sources = Glob('*.cpp') + Glob('rng/*.cpp')
afk_libs = ['boost_random', 'crypto', 'GL', 'GLU', 'GLEW', 'glut', 'OpenCL']
afk_ccflags = ['-Wall', '-Werror']

Program('afk', afk_sources, LIBS=afk_libs, CCFLAGS=afk_ccflags + extra_ccflags)

for shader in Glob('shaders/*.glsl'):
    File(shader)

